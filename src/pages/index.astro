---
import BaseLayout from "../layouts/BaseLayout.astro";
import UploadCard from "../components/UploadCard.astro";
import { getFormattedCommitLabel, getRepoUrl } from "../lib/metadata";

const footerCommit = getFormattedCommitLabel();
const canonicalUrl = getRepoUrl();
---

<BaseLayout
    title="Juicebox - Temporary File Uploads"
    description="Juicebox is a temporary file upload service with rich visual feedback and retention controls."
    canonical={canonicalUrl}
    bodyClass="upload-page"
>
    <main transition:name="page-content">
        <UploadCard footerCommit={footerCommit} footerRepoUrl={canonicalUrl} />
    </main>
</BaseLayout>
